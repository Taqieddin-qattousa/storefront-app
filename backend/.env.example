# Server
PORT=3000
NODE_ENV=dev

# Database (for Docker)
POSTGRES_HOST=127.0.0.1
POSTGRES_DB=store_dev
POSTGRES_USER=store_user
POSTGRES_PASSWORD=your_secure_password
POSTGRES_DB_TEST=store_test
POSTGRES_USER_TEST=store_user
POSTGRES_PASSWORD_TEST=your_secure_password

# Security
BCRYPT_PASSWORD=your_pepper_string
SALT_ROUNDS=10
TOKEN_SECRET=your_jwt_secret_string

# Auth0 (Optional - only needed if using Auth0 authentication)
AUTH0_DOMAIN=your-tenant.us.auth0.com
AUTH0_AUDIENCE=your-api-identifier

# AWS S3 (For product image storage)
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-bucket-name